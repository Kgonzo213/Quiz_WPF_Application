<Window x:Class="Programowanie_Projekt.NumberOfQuestions"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Programowanie_Projekt"
        mc:Ignorable="d"
        Title="NumberOfQuestions" Height="150" Width="300" Background="Black" Foreground="White">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"  Content="Wpisz ilość pytań:" Foreground="White"></Label>
        <TextBox  Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Name="txtNumberOfQuestions" Background="AliceBlue"></TextBox>
        <Button Grid.Row="2" Grid.Column="1" Name="btnOK" Content="OK" Click="btnOK_Click" Style="{DynamicResource ButtonStyle1}" ></Button>
    </Grid>
</Window>
